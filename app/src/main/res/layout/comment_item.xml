<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:background="#fff"
    android:paddingRight="16dp"
    android:paddingTop="8dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/mine_man"
        android:layout_marginTop="8dp"
        android:id="@+id/iv_avatar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="李沛伦"
        android:textColor="@color/colorBlue"
        android:layout_alignBottom="@+id/iv_avatar"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_marginLeft="8dp"
        android:textSize="13sp"
        android:layout_marginBottom="18dp"
        android:id="@+id/tv_comment_user_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_comment_time"
        android:layout_alignTop="@id/tv_comment_user_name"
        android:layout_alignParentRight="true"
        android:text="发布于2017-01-01"
        android:textSize="11sp"
        android:layout_marginTop="4dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_comment_content"
        android:layout_below="@id/iv_avatar"
        android:layout_alignLeft="@id/tv_comment_user_name"
        android:textSize="13sp"
        android:textColor="@color/black58"
        android:lineSpacingMultiplier="1.25"
        android:text="contentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_comment_reply"
        android:layout_below="@id/tv_comment_content"
        android:text="回复"
        android:textSize="13sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black58"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"/>
</RelativeLayout>