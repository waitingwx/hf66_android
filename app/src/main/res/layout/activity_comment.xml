<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.cqxy.fyb.CommentActivity">
    <include layout="@layout/house_enter_headlayout"
        android:id="@+id/include_head"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/view_divdera"
        android:layout_below="@id/include_head"
        android:background="#f6f6f6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/ll_post_comment"
        android:padding="10dp"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/et_comment_body"
            android:layout_weight="1"
            android:background="@mipmap/comment_et_bg"
            android:drawableLeft="@mipmap/comment_et_icon"
            android:padding="8dp"
            android:theme="@style/MyEditText"
            android:textSize="16sp"
            android:drawablePadding="12dp"
            android:hint="写下您于房子的评价吧～"
            android:paddingLeft="12dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_submit"
            android:onClick="btnClick"
            android:textColor="@color/black9a"
            android:textSize="18sp"
            android:background="@null"
            android:text="发送"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/view_divderb"
        android:layout_above="@id/ll_post_comment"
        android:background="#f6f6f6"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view_divderb"
        android:layout_below="@id/view_divdera"
        android:id="@+id/lv_comment"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_post_comment"
        android:layout_below="@id/include_head"
        android:text="此房源还没有用户评价，提交您自己的评价吧～"
        android:gravity="center"
        android:id="@+id/tv_nocomment"/>
</RelativeLayout>
