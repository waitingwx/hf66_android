<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recommend_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/bottom_line"
    android:paddingBottom="8dp">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/recommend_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="张三"
            android:textColor="@color/black58"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/recommend_getmoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="50.5"
            android:textColor="@color/black58"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/recommend_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2017.9.20"
            android:textColor="@color/black58"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_detail"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignLeft="@id/ll_title"
        android:layout_alignRight="@id/ll_title"
        android:layout_below="@id/ll_title"
        android:background="@null"
        android:clickable="false"
        android:gravity="right|center_vertical"
        android:paddingRight="24dp"

        android:text="查看详情"
        android:textColor="@color/btn_blue_normal" />
</RelativeLayout>
