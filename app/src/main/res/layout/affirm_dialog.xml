<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:textSize="20sp"
        android:padding="8dp"
        android:textColor="@color/black9a"
        android:text="确认下架"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_conent"
        android:layout_marginTop="1dp"
        android:layout_centerInParent="true"
        android:textSize="16sp"
        android:textColor="@color/black9a"
        android:text="您确定要下架该房源吗？"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/tv_title"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_below="@id/tv_conent"
      android:weightSum="2">
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@color/btn_blue_normal"
          android:layout_toLeftOf="@id/view_center"
          android:layout_alignParentLeft="true"
          android:id="@+id/btn_cancel"
          android:layout_marginRight="2dp"

          android:textColor="@color/colorWhite"
          android:text="取消"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@color/btn_blue_normal"
          android:id="@+id/btn_affirm"
          android:layout_marginLeft="2dp"
          android:layout_weight="1"
          android:textColor="@color/colorWhite"
          android:text="确定"/>
  </LinearLayout>
</RelativeLayout>